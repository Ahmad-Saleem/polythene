{
  "name": "polythene-examples",
  "version": "0.0.1",
  "description": "Polythene examples",
  "license": "MIT",
  "main": "index.js",
  "directories": {
    "src": "src",
    "baseURL": "src"
  },
  "dependencies": {
    "mithril": "^0.2.0"
  },
  "devDependencies": {
    "autoprefixer": "",
    "babel-core": "",
    "babel-plugin-closure-elimination": "",
    "es6-module-loader": "",
    "lodash": "git@github.com:lodash/lodash.git",
    "mithril-infinite": "^0.1.6",
    "system-css": "",
    "system-text": "",
    "systemjs": "",
    "systemjs-builder": "",
    "verge": "^1.9.1"
  },
  "scripts": {
    "preinstall": "npm run setup-symlink",
    "postinstall": "npm run setup-babel && npm run copy-libs",
    "setup-symlink": "rm -rf src/lib/polythene && mkdir -p src/lib && cd .. && ln -s \"$(pwd)/lib/\" examples/src/lib/polythene",
    "setup-babel": "cd node_modules/babel-core && npm install",
    "copy-libs": "node scripts/copy-libs src/lib",
    "autoprefixer": "autoprefixer src/app/app/*.css -b 'last 2 versions'",
    "sass": "sass --update --sourcemap=none src/app/app/",
    "watch-es6": "node ../scripts/watch-es6.js src/",
    "build-css": "npm run sass && npm run autoprefixer",
    "watch-css": "node ../scripts/watch-scss.js src/",
    "build": "npm run build-css && node scripts/build-app.js",
    "watch": "npm run watch-css & npm run watch-es6",
    "build-copy-to-gh": "cp -R build/* ../../gh-pages-examples/",
    "github": "rm -rf ../../gh-pages-examples/app && rm -rf ../../gh-pages-examples/*.html && rm -rf ../../gh-pages-examples/lib && rm -rf ../../gh-pages-examples/config.js && npm run build && npm run build-copy-to-gh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArthurClemens/Polythene.git"
  },
  "author": "Arthur Clemens",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "bugs": {
    "url": "https://github.com/ArthurClemens/Polythene/issues"
  },
  "homepage": "https://github.com/ArthurClemens/Polythene"
}
